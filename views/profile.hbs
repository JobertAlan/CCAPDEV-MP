
<head>

    <!-- stylesheet -->
    <link rel="stylesheet" type="text/css" media="all" href="styles/user.css">

</head>


    <!-- Main container -->
    <div class="cont">

        <!-- stuff on the left -->
        <div class="left-cont">

            <!-- basic info about user -->
            <div class="user-info">
                <img src='{{userData.picturePath}}' alt="user_pfp" />
                <h2>{{userData.firstName}}  {{userData.lastName}}</h2>
                <h3>Email: {{userData.email}}</h3>
                <hr>
                

            </div>
        </div>


        <div class="editInfo">
            <form action="/profile/{{userData._id}}" method="post">
                <label>First Name: </label> <input type="text" name="newFname" /> <br>
                <label>Last Name: </label> <input type="text" name="newLname" /> <br>

                <input type="submit" value="Change names" />
            </form>
        </div>


        <!-- review stuff at the bottom -->
        {{#unless userData.isOwner }}
            <div class="review-cont">
                <br>
                <h1 class="h1Review">{{userData.firstName}}'s Reviews</h1>
                <br>


                {{#each reviews }}
                    <div class="reviewContentContainer">

                        <div class="reviewPicContainer">
                            <img src="./images/review/cafe_maxims_review-400w.png">
                            
                        </div>

                        <div class="reviewTextContainer">
                            <h3>{{this.title}}</h3>
                            <p class="reviewRating">{{this.rating}}</p>

                            <p class="reviewProper">
                                {{this.description}}
                            </p>
                        </div>

                    </div>
                    <br>
                {{/each}}


            </div>
        {{/unless}}


        {{#if userData.isOwner }}
            <div class="myCafeContainer">
                <p>Input your cafe here</p>
                <form action="/profile/postcafe" method="post">
                    <label>Cafe Name: </label><input type="text" name="name"/>
                    <label>Cafe Description: </label><textarea rows="4" cols="50" name="description"></textarea>

                    <input type="submit" value="send it"/>
                </form>
            </div>
        {{/if}}

        

    </div>

<script>
    window.addEventListener('DOMContentLoaded', function() {
        
    })
</script>

