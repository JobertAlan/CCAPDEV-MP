
<head>

    <!-- stylesheet -->
    <link rel="stylesheet" type="text/css" media="all" href="styles/user.css">

</head>


    <!-- Main container -->
    <div class="cont">

        <!-- stuff on the left -->
        <div class="left-cont">

            <!-- basic info about user -->
            <div class="user-info">
                <img src='{{userData.picturePath}}' alt="user_pfp" />
                <h2>{{userData.firstName}}  {{userData.lastName}}</h2>
                <h3>Email: {{userData.email}}</h3>
                <hr>
                <p>193 reviews</p>
                <p>41 ratings</p>

                <!-- has all the interaction stuff to the user -->
                <div class="interact-cont">
                    <button>✉ Message</button>
                    <button>❤︎ Follow</button>
                </div>
            </div>
        </div>

        {{!-- <!-- stuff on the right -->
        <div class="right-cont">
            <h2>Stats</h2>
            <br>
            <div class="stats">
                <div class="stat-num">
                    <h3>41</h3>
                    <p>Updoots</p>
                </div>
                <div class="stat-num">
